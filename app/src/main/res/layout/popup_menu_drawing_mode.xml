<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="3"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/popup_drawing_mode_delete_btn"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_vertical"
        android:layout_margin="2dp"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/board_delete"/>

    <ImageButton
        android:id="@+id/popup_drawing_mode_line_btn"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_vertical"
        android:layout_margin="2dp"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/board_drawing_dashed_line"/>

    <ImageButton
        android:id="@+id/popup_drawing_mode_area_btn"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_vertical"
        android:layout_margin="2dp"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/board_drawing_area"/>

    <ImageButton
        android:id="@+id/popup_drawing_mode_arrow_btn"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_vertical"
        android:layout_margin="2dp"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/board_drawing_arrow"/>

</GridLayout>